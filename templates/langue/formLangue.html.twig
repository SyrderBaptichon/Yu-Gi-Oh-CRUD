{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }} {# Inclut le contenu du block 'head' de base.html.twig #}
    <link rel="stylesheet" href="{{ asset('assets/css/Langue.css') }}">
    <style>
        /* Styles spécifiques pour le formulaire */
        form {
            width: 400px;
            margin: 0 auto;
        }

        /* Style pour les étiquettes des champs */
        form label {
            display: block;
            margin-bottom: 5px;
        }

        /* Style pour les champs de saisie */
        form input[type="text"],
        form input[type="email"],
        form input[type="password"],
        form textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Style pour le bouton de soumission */
        form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Style pour le bouton de soumission au survol */
        form button:hover {
            background-color: #45a049;
        }

        /* Style pour les messages d'erreur */
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        /* Style pour les messages de succès */
        .success-message {
            color: green;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Langue à modifier !</h1>

    {{ form(form) }}

{% endblock %}
