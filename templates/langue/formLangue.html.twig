
{% extends 'base.html.twig' %}


{% block body %}

    <div id="navbarMenuHeroB" class="navbar-menu">
        <div class="navbar-end">
            <a class="navbar-item" href="{{ path('cartes_show') }}"> Cartes </a>
            <a class="navbar-item" href="{{ path('editions_show') }}"> Editions </a>
            <a class="navbar-item is-active" href="{{ path('langues_show') }}"> Langues </a>
        </div>
    </div>
    </div>
    </nav>
    </div>

    <div class="hero-body">
        <div class="container has-text-centered">

            <div class="columns">
                <div class="column is-4"></div>

                <div class="column is-4">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Nom</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control">
                                    {{ form_widget(form.nom_langue, {'attr': {'class': 'input'}}) }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label"></div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control">
                                    {{ form_widget(form.save, {'attr': {'class': 'button is-primary'}}) }}
                                </p>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>

            </div>


        </div>
    </div>

{% endblock %}






